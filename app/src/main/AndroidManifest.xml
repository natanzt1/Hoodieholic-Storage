        <activity android:name=".DetectionActivity" />
        <activity android:name=".DetectionResultActivity" />

        <service android:name=".service.FirebaseInstanceService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>
    </application>

</manifest>