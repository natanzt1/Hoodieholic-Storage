<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/grad_bg"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/tv_ambil_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="AMBIL BARANG"
        android:textSize="35sp"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-light"/>

    <ImageView
        android:id="@+id/img_ambil_image"
        android:layout_width="140dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_artbuy"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"/>

    <TextView
        android:id="@+id/tv_ambil_nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Nama Jaket"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-medium"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jumlah : "
            android:textSize="20sp"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-medium"/>
        <Spinner
            android:id="@+id/spinner_ambil_jumlah"
            android:layout_width="80dp"
            android:layout_height="28dp"
            android:layout_marginLeft="15dp">

        </Spinner>
    </LinearLayout>

    <Button
        android:id="@+id/ambil_submit_button"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:text="Ambil Barang"
        android:textColor="@color/white"
        android:background="@drawable/btn_selector"
        android:paddingLeft="70dp"
        android:paddingRight="70dp"
        android:fontFamily="sans-serif-medium"
        android:textAllCaps="false"
        android:textSize="16sp" />

</LinearLayout>